@using ConsultorioDermatologico.Models;
@model List<EvolucionCLS>

@{
    ViewBag.Title = "Index";

}

<h2 style="padding-top:1em">Visitas del paciente @ViewBag.nombrePaciente</h2>

<div class="row espacio">
    <div class="col-sm-2">
        <div class="row justify-content-center">
            @Html.ActionLink("Regresar", "InformacionPaciente", "HistoriaClinica", new { idPaciente = @ViewBag.idPaCiente }, new { @class = "btn-outline-secondary btn rounded-pill llenar-espacio" })            
        </div>
    </div>
    <div class="col-sm-6">
        
    </div>
    <div class="col-sm-4">
        <div class="row justify-content-center">
            @Html.ActionLink("Agregar", "Agregar", "Evolucion", new { idHistoriaClinica = @ViewBag.idHistoriaClinica }, new { @class = "btn btn-primary rounded-pill llenar-espacio" })
        </div>
    </div>
</div>



<table class="table table-hover table-bordered">
    <thead>
        <tr class="tdCentrar font-weight-bold">
            <td>@Html.LabelFor(p => Model[0].fechaVisita)</td>
            <td>@Html.LabelFor(p => Model[0].motivoConsulta)</td>
            <td>Ver evolución</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.OrderByDescending(c => c.fechaVisita))
        {
            <tr>
                <td>@item.fechaVisita.ToString("yyyy-MM-dd")</td>
                <td>@item.motivoConsulta</td>
                <td>
                    <div class="row justify-content-center">

                        @Html.ActionLink(" ", "EvolucionPaciente", "HistoriaClinica", new { idEvolucion = @item.idEvolucion }, new { @class = "fa fa-info btn btn-success" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

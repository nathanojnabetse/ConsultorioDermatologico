@using ConsultorioDermatologico.Models
@model List<PacienteCLS>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <td>@Html.LabelFor(p => Model[0].cedula)</td>
            <td>@Html.LabelFor(p => Model[0].nombres)</td>
            <td>Acciones</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.cedula</td>
                <td>@item.nombres</td>
                <td>
                    @Html.ActionLink(" ", "Editar", "Paciente", new { id = @item.idPaciente }, new { @class = "fa fa-edit btn btn-primary" })
                    <button type="button" onclick=" mostrarPopup(@item.idPaciente)" class=" fa fa-trash btn btn-danger" data-toggle="modal" data-target="#exampleModal"></button>
                </td>
            </tr>
        }
    </tbody>
</table>


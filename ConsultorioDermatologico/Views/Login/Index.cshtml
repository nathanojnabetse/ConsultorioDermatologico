    <style>


        body {
            font-size: 12px;
        }

        #Contenedor {
            width: 400px;
            margin: 50px auto;
            background-color: #F3EDED;
            border: 1px solid #ECE8E8;
            height: 400px;
            border-radius: 8px;
            padding: 0px 9px 0px 9px;
        }

        .Icon {
            margin-top: 10px;
            margin-bottom: 10px;
            color: #FFF;
            font-size: 50px;
            text-align: center;            
        }

        .opcioncontra {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }

        #iconoUsuario {
            color: #A8A6A6;
        }

        .entrada{
            width:100%;
        }
       
    </style>
</head>
<body>
    <div id="Contenedor">
        <div class="Icon" id="iconoUsuario">
            <!--Icono de usuario-->
            <span class="fa fa-user-circle fa-2x"></span>
        </div>
        <br>
        <div class="ContentForm">
            @using (Ajax.BeginForm("Login", "Login", "", new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "Ingresar",
                UpdateTargetId = "divRespuesta"
            }, new { @id = "frmLogin" }))
            {
                <div class="input-group mb-3">
                    @Html.TextBox("aliasUsuario", null, new { @class = "form-control col-sm-12", @placeholder = "Usuario", @required = "true" })
                </div>

                <div class="input-group mb-3">
                    @Html.Password("contraseñaUsuario", null, new { @class = "form-control col-sm-12", @placeholder = "*******", @required = "true" })
                </div>

                <br>

                <button class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit">Entrar</button>
                <div class="opcioncontra"><a href="">¿Olvidó tu contraseña?</a></div>
               
                <div id="divRespuesta"></div>
            }

            @*@if (Model != null && Model.mensajeError != null)
        {
            @Html.Label(Model.mensajeError, new { @class = "text-danger" })

        }*@
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</body>

</html>

<script>
     function Ingresar(rpta) {
         if (rpta == "MEDICO") {
             document.location.href = "@Url.Action("Medico", "Home")";
             document.getElementById("divRespuesta").innerHTML = "ACESSO EXITOSO"
         } else if (rpta == "ADMINISTRADOR") {
             document.location.href = "@Url.Action("Admin", "Home")";
             document.getElementById("divRespuesta").innerHTML = "ACESSO EXITOSO"
         }
         else {
                 alert("Usuario o contraseña incorrecta")
         }
    }
</script>